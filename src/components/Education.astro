---
import { siteConfig } from "../config";

const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---

{
  hasEducation && (
    <section id="education" class="relative py-24 md:py-32 px-6 md:px-12 lg:px-16">
      <!-- Section number -->
      <span class="section-number top-8 right-8 md:top-12 md:right-16">04</span>

      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-16">
          <!-- Left column - Sticky header -->
          <div class="lg:col-span-4 lg:sticky lg:top-32 lg:self-start">
            <div class="space-y-4">
              <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight">
                Education
              </h2>
              <div class="h-1 w-24 bg-[var(--theme-accent)]"></div>
            </div>
          </div>

          <!-- Right column - Education list -->
          <div class="lg:col-span-8">
            <div class="space-y-8">
              {siteConfig.education.map((edu, index) => (
                <div>
                  <div class="space-y-2">
                    <h3 class="text-xl md:text-2xl font-semibold text-[var(--theme-accent)]">
                      {edu.school}
                    </h3>
                    <p class="text-base md:text-lg text-[var(--theme-text-primary)]">
                      {edu.degree}
                    </p>
                    <p class="text-xs font-light uppercase tracking-widest text-[var(--theme-text-secondary)]">
                      {edu.dateRange}
                    </p>
                  </div>

                  <!-- Separator (not after last item) -->
                  {index < siteConfig.education.length - 1 && (
                    <hr class="mt-8 border-t border-[var(--theme-border)]" />
                  )}
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}

---
import { siteConfig } from "../config";

const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
---

{
  hasExperience && (
    <section id="experience" class="relative py-24 md:py-32 px-6 md:px-12 lg:px-16">
      <!-- Section number -->
      <span class="section-number top-8 left-8 md:top-12 md:left-16">03</span>

      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-16">
          <!-- Left column - Sticky header -->
          <div class="lg:col-span-4 lg:sticky lg:top-32 lg:self-start">
            <div class="space-y-4">
              <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight">
                Experience
              </h2>
              <div class="h-1 w-24 bg-[var(--theme-accent)]"></div>
            </div>
          </div>

          <!-- Right column - Timeline -->
          <div class="lg:col-span-8">
            <div class="relative">
              <!-- Vertical timeline line -->
              <div class="absolute left-0 top-0 bottom-0 w-px bg-[var(--theme-accent)] opacity-30"></div>

              <div class="space-y-12">
                {siteConfig.experience.map((exp, index) => (
                  <div class="relative pl-8 md:pl-12 group">
                    <!-- Timeline dot -->
                    <div class="absolute left-0 top-2 w-2 h-2 -translate-x-1/2 bg-[var(--theme-accent)] rotate-45"></div>

                    <!-- Content -->
                    <div class="space-y-3">
                      <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-2">
                        <div>
                          <h3 class="text-xl md:text-2xl font-semibold text-[var(--theme-accent)]">
                            {exp.company}
                          </h3>
                          <p class="text-base md:text-lg text-[var(--theme-text-primary)] mt-1">
                            {exp.title}
                          </p>
                        </div>
                        <div class="flex items-center gap-3">
                          <span class="text-xs font-light uppercase tracking-widest text-[var(--theme-text-secondary)]">
                            {exp.dateRange}
                          </span>
                          {index === 0 && (
                            <span class="text-xs font-semibold uppercase tracking-widest text-[var(--theme-accent)] border border-[var(--theme-accent)] px-2 py-0.5 rounded">
                              Current
                            </span>
                          )}
                        </div>
                      </div>

                      <!-- Terminal-style bullets -->
                      <ul class="space-y-2 pt-2">
                        {exp.bullets.map((bullet) => (
                          <li class="flex items-start gap-3 text-sm md:text-base text-[var(--theme-text-secondary)] leading-relaxed">
                            <span class="text-[var(--theme-accent)] font-light mt-1">&gt;</span>
                            <span>{bullet}</span>
                          </li>
                        ))}
                      </ul>
                    </div>

                    <!-- Separator (not after last item) -->
                    {index < siteConfig.experience.length - 1 && (
                      <hr class="mt-8 border-t border-[var(--theme-border)]" />
                    )}
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}

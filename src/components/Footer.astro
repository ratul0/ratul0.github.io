---
import { siteConfig } from "../config";
---

<footer
  class="relative py-20 md:py-24 px-6 md:px-12 lg:px-16 border-t border-[var(--theme-border)]"
>
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-16">
      <!-- Main content -->
      <div class="lg:col-span-12 space-y-10">
        <!-- CTA -->
        <div class="space-y-5">
          <p class="text-3xl md:text-4xl lg:text-5xl font-semibold text-[var(--theme-text-primary)] leading-tight">
            Let's work together.
          </p>

          <a
            href={`mailto:${siteConfig.social.email}`}
            class="group inline-flex items-center gap-3 text-lg md:text-xl text-[var(--theme-accent)] hover:text-[var(--theme-accent)] transition-colors duration-200"
          >
            <span class="relative">
              {siteConfig.social.email}
              <span class="absolute -bottom-1 left-0 w-0 h-px bg-[var(--theme-accent)] group-hover:w-full transition-all duration-300 ease-out"></span>
            </span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="transition-transform duration-300 group-hover:translate-x-1 group-hover:-translate-y-1"
            >
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M10 5a2 2 0 0 1 4 0a7 7 0 0 1 4 6v3a4 4 0 0 1 -4 4h-2l-4 4v-4h-2a4 4 0 0 1 -4 -4v-3a7 7 0 0 1 4 -6" />
            </svg>
          </a>
        </div>

        <!-- Social links -->
        <div class="flex flex-wrap gap-x-10 gap-y-4 pt-2">
          {
            siteConfig.social?.email && (
              <a
                href={`mailto:${siteConfig.social.email}`}
                class="thin-rule group"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-3.5 h-3.5 transition-transform group-hover:scale-110"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                  <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" />
                  <path d="M3 7l9 6l9 -6" />
                </svg>
                <span>Email</span>
              </a>
            )
          }
          {
            siteConfig.social?.linkedin && (
              <a
                href={siteConfig.social.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="thin-rule group"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-3.5 h-3.5 transition-transform group-hover:scale-110"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                  <path d="M8 11v5" />
                  <path d="M8 8v.01" />
                  <path d="M12 16v-5" />
                  <path d="M16 16v-3a2 2 0 1 0 -4 0" />
                  <path d="M3 7a4 4 0 0 1 4 -4h10a4 4 0 0 1 4 4v10a4 4 0 0 1 -4 4h-10a4 4 0 0 1 -4 -4z" />
                </svg>
                <span>LinkedIn</span>
              </a>
            )
          }
          {
            siteConfig.social?.github && (
              <a
                href={siteConfig.social.github}
                target="_blank"
                rel="noopener noreferrer"
                class="thin-rule group"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-3.5 h-3.5 transition-transform group-hover:scale-110"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                  <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" />
                </svg>
                <span>GitHub</span>
              </a>
            )
          }
        </div>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-16 pt-8 border-t border-[var(--theme-border)] flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-xs font-mono text-[var(--theme-text-secondary)] opacity-60">
        © {new Date().getFullYear()} — Built with precision
      </p>

      <p class="text-xs font-mono text-[var(--theme-text-secondary)] opacity-40">
        v1.0.0 :: stable
      </p>
    </div>
  </div>
</footer>

<style>
  /* Section number styling */
  .section-number {
    position: absolute;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 4rem;
    font-weight: 700;
    color: var(--theme-text-secondary);
    opacity: 0.05;
    line-height: 1;
    pointer-events: none;
  }

  @media (max-width: 768px) {
    .section-number {
      font-size: 3rem;
    }
  }

  /* Thin rule underline animation */
  .thin-rule {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.75rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--theme-text-secondary);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .thin-rule::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 1px;
    background: currentColor;
    transform: scaleX(0.6);
    transform-origin: left;
    transition: transform 0.3s ease;
  }

  .thin-rule:hover {
    color: var(--theme-accent);
  }

  .thin-rule:hover::after {
    transform: scaleX(1);
  }

  /* Pulse animation for status dot */
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .animate-pulse {
    animation: pulse 2s ease-in-out infinite;
  }
</style>

---
import { siteConfig } from "../config";

const currentRole = siteConfig.experience?.[0];
---

<div id="hero" class="relative min-h-screen flex items-center overflow-hidden">
  <!-- Background textures -->
  <div class="absolute inset-0 scanlines"></div>
  <div class="film-grain"></div>

  <!-- Section number -->
  <span class="section-number top-20 left-8 md:top-24 md:left-16">01</span>

  <!-- Main content -->
  <div
    class="relative z-10 w-full max-w-6xl mx-auto px-6 md:px-12 lg:px-16 pt-24 md:pt-32"
  >
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-16 items-center">
      <!-- Left column - Text content -->
      <div class="lg:col-span-8 space-y-6 md:space-y-8">
        <!-- Greeting -->
        <p
          class="reveal text-sm md:text-base font-light uppercase tracking-[0.2em] text-[var(--theme-text-secondary)]"
        >
          Hello, I'm
        </p>

        <!-- Name -->
        <h1 class="reveal reveal-delay-1 relative">
          <span
            class="block text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-bold leading-[0.9] tracking-tight"
          >
            {siteConfig.name}
          </span>
          <!-- Animated accent line -->
          <div class="accent-line animate mt-6 h-4"></div>
        </h1>

        <!-- Title -->
        <p
          class="reveal reveal-delay-2 text-xl md:text-2xl lg:text-3xl font-semibold text-[var(--theme-accent)]"
        >
          {siteConfig.title}
        </p>

        <!-- Description -->
        <p
          class="reveal reveal-delay-3 max-w-2xl text-base md:text-lg lg:text-xl leading-relaxed text-[var(--theme-text-secondary)] font-normal"
        >
          Building systems that solve real problems in logistics, healthcare,
          and e-commerce.
        </p>

        <!-- Social links with thin rule -->
        <div class="reveal reveal-delay-4 flex flex-wrap gap-x-8 gap-y-4 pt-4">
          {
            siteConfig.social?.email && (
              <a
                href={`mailto:${siteConfig.social.email}`}
                class="thin-rule group"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-3.5 h-3.5 transition-transform group-hover:scale-110"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                  <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" />
                  <path d="M3 7l9 6l9 -6" />
                </svg>
                <span>Email</span>
              </a>
            )
          }
          {
            siteConfig.social?.linkedin && (
              <a
                href={siteConfig.social.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="thin-rule group"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-3.5 h-3.5 transition-transform group-hover:scale-110"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                  <path d="M8 11v5" />
                  <path d="M8 8v.01" />
                  <path d="M12 16v-5" />
                  <path d="M16 16v-3a2 2 0 1 0 -4 0" />
                  <path d="M3 7a4 4 0 0 1 4 -4h10a4 4 0 0 1 4 4v10a4 4 0 0 1 -4 4h-10a4 4 0 0 1 -4 -4z" />
                </svg>
                <span>LinkedIn</span>
              </a>
            )
          }
          {
            siteConfig.social?.github && (
              <a
                href={siteConfig.social.github}
                target="_blank"
                rel="noopener noreferrer"
                class="thin-rule group"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-3.5 h-3.5 transition-transform group-hover:scale-110"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                  <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" />
                </svg>
                <span>GitHub</span>
              </a>
            )
          }
        </div>

        <!-- Current work indicator -->
        {
          currentRole && (
            <div class="reveal reveal-delay-5 pt-8">
              <a
                href="#experience"
                class="inline-flex items-center gap-2 text-xs md:text-sm font-light uppercase tracking-widest text-[var(--theme-text-secondary)] hover:text-[var(--theme-accent)] transition-colors duration-200"
              >
                <span class="block-cursor" />
                <span>Current work: {currentRole.company}</span>
              </a>
            </div>
          )
        }
      </div>

      <!-- Right column - Profile image -->
      <div
        class="lg:col-span-4 flex justify-center lg:justify-end reveal reveal-delay-2"
      >
        <div class="profile-image-container">
          <div class="profile-image-frame">
            {
              siteConfig.profileImage ? (
                <img
                  src={siteConfig.profileImage}
                  alt={siteConfig.name}
                  class="w-48 h-48 md:w-56 md:h-56 object-cover"
                />
              ) : (
                <div class="profile-image-placeholder">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <circle cx="12" cy="8" r="4" />
                    <path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" />
                  </svg>
                  <span class="text-xs uppercase tracking-wider mt-2">
                    Add your image
                  </span>
                  <span class="text-[10px] opacity-60 mt-1">See config.ts</span>
                </div>
              )
            }
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div
    class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 text-[var(--theme-text-secondary)] opacity-60"
  >
    <span class="text-xs uppercase tracking-widest">scroll</span>
    <svg
      class="w-4 h-4 animate-bounce"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</div>

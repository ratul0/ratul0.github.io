---
import { siteConfig } from "../config";

const hasReferences = siteConfig.references && siteConfig.references.length > 0;
---

{
  hasReferences && (
    <section id="references" class="relative py-24 md:py-32 px-6 md:px-12 lg:px-16">
      <!-- Section number -->
      <span class="section-number top-8 right-8 md:top-12 md:right-16">05</span>

      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-16">
          <!-- Left column - Sticky header -->
          <div class="lg:col-span-4 lg:sticky lg:top-32 lg:self-start">
            <div class="space-y-4">
              <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight">
                References
              </h2>
              <div class="h-1 w-24 bg-[var(--theme-accent)]"></div>
            </div>
          </div>

          <!-- Right column - References list -->
          <div class="lg:col-span-8">
            <div class="space-y-16">
              {siteConfig.references.map((ref, index) => (
                <div class="relative group">
                   <div class="space-y-6 relative z-10">
                    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
                         <div>
                            <h3 class="text-xl md:text-2xl font-semibold text-[var(--theme-accent)]">
                            {ref.name}
                            </h3>
                             <p class="text-base md:text-lg text-[var(--theme-text-primary)]">
                            {ref.position}
                            </p>
                         </div>
                        {ref.linkedin && (
                            <a
                            href={ref.linkedin}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="inline-flex items-center text-sm font-medium text-[var(--theme-text-secondary)] hover:text-[var(--theme-accent)] transition-colors"
                            >
                            LinkedIn â†—
                            </a>
                        )}
                    </div>
                    
                    
                    <blockquote class="relative pl-6 border-l-4 border-[var(--theme-accent)] italic text-lg md:text-xl text-[var(--theme-text-secondary)] leading-relaxed">
                       "{ref.quote}"
                    </blockquote>
                  </div>
                   <!-- Separator (not after last item) -->
                  {index < siteConfig.references.length - 1 && (
                    <hr class="mt-16 border-t border-[var(--theme-border)]" />
                  )}
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
